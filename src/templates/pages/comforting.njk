<!-- comforting.njk -->
{% set title = 'Comforting Conversation' %}
{% set id = "comforting" %}

{% extends "layout.njk" %}

{% block content %}
  <!-- Adds the nav macro -->
  {% import 'macros/nav.njk' as nav %}
  {{ nav.build({ icon: 'fad fa-hand-holding-heart', title: title, id: id }) }}

  <!--- Content for this page -->
  <main>
    {% import 'macros/tabs.njk' as tabs %}
    {{ tabs.build({
    tabfile: id,
    tabs: [{
      icon: 'fad fa-star-of-life',
      title: 'Intro'
    }, {
      icon: 'fad fa-question',
      title: 'Questions'
    }, {
      icon: 'fad fa-grin-alt',
      title: 'Great Response'
    }, {
      icon: 'fad fa-tags',
      title: 'Names of God'
    }]
  }) }}
  </main>
{% endblock %}
