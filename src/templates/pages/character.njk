<!-- courageous.njk -->
{% set title = "About Character" %}
{% set id = "character" %}

{% extends "layout.njk" %}

{% block content %}
  <!-- Adds the header partial { include "partials/header.njk" %} -->

  <!-- Adds the nav macro -->
  {% import 'macros/nav.njk' as nav %}
  {{ nav.build({ icon: 'fas fa-compass', title: title, id: id }) }}

  <!--- Content for this page -->
  <main class="pt-5">
    {% import 'macros/tabs.njk' as tabs %}
    {{ tabs.build({
    tabfile: id,
    tabs: [{
      icon: 'fas fa-star-of-life',
      title: 'Intro'
    }, {
      icon: 'fas fa-book',
      title: 'Definitions'
    }, {
      icon: 'fas fa-layer-group',
      title: 'Groupings'
    }]
  }) }}
  </main>
{% endblock %}
