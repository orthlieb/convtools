<!-- collaborating.njk -->
{% set title = "Collaborating Conversation" %}
{% set id = "collaborating" %}
{% extends "layout.njk" %}

{% block content %}
  <!-- Adds the header partial { include "partials/header.njk" %} -->

  <!-- Adds the nav macro -->
  {% import 'macros/nav.njk' as nav %}
  {{ nav.build({ icon: 'fad fa-users', title: title, id: id }) }}

  <!--- Content for this page -->
  <main>
    {% import 'macros/tabs.njk' as tabs %}
    {{ tabs.build({
      tabfile: id,
      tabs: [{
        icon: 'fad fa-star-of-life',
        title: 'Intro'
      }, {
        icon: 'fad fa-question',
        title: 'Questions'
      }]
    }) }}
  </main>
{% endblock %}
