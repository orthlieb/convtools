{% macro build(params) %}
  <!-- params = { cards: 'comforting-great', titles: [ '1. What can you be grateful for', ...] } -->
  <div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">

    {% for i in range(0, params.titles.length) -%}
      <!-- Accordion card {{i}} -->
      <div class="card">
        <!-- Card header -->
        <div class="card-header" role="tab" id="headingCollaboratingQuestion{{i}}">
          <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseCollaboratingQuestion{{i}}" aria-expanded="true" aria-controls="collapseCollaboratingQuestion{{i}}">
            <h5 class="mb-0">
              {{ params.titles[i] | safe }}
              <i class="fa fa-angle-up rotate-icon float-right"></i>
            </h5>
          </a>
        </div>

        <!-- Card body -->
        <div id="collapseCollaboratingQuestion{{i}}" class="collapse" role="tabpanel" aria-labelledby="headingCollaboratingQuestion{{i}}" data-parent="#accordionEx">
          <div class="card-body">
            {% include "partials/" + params.cards + "-" + (i + 1) + ".njk" %}
          </div>
        </div>
      </div>
    <!-- /Accordion card {{i}} -->
    {%- endfor %}

  </div>
{% endmacro %}
